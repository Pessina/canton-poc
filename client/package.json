{
  "name": "canton-mpc-poc-client",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "demo": "tsx src/scripts/demo.ts",
    "mpc-service": "tsx src/mpc-service/index.ts",
    "relayer": "tsx src/relayer/index.ts",
    "derive-address": "tsx src/scripts/derive-address.ts",
    "daml:build": "cd .. && dpm build",
    "daml:test": "cd .. && dpm test",
    "daml:sandbox": "cd .. && dpm sandbox --json-api-port 7575 --dar .daml/dist/canton-mpc-poc-0.0.1.dar",
    "codegen:api": "curl -sf http://localhost:7575/docs/openapi -o openapi.yaml && openapi-typescript openapi.yaml -o generated/api/ledger-api.ts",
    "codegen:daml": "cd .. && dpm codegen-js .daml/dist/canton-mpc-poc-0.0.1.dar -o client/generated/model -s daml.js",
    "codegen": "pnpm run codegen:daml && pnpm run codegen:api",
    "clean": "rm -rf generated ../.daml",
    "generate": "pnpm run clean && pnpm run daml:build && pnpm run codegen && pnpm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "check": "tsc --noEmit && eslint . && prettier --check .",
    "fix": "eslint . --fix && prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@types/ws": "^8.18.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "jiti": "^2.6.1",
    "openapi-typescript": "^7.13.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@daml.js/canton-mpc-poc-0.0.1": "file:./generated/model/canton-mpc-poc-0.0.1",
    "@daml/types": "^3.4.11",
    "@mojotech/json-type-validation": "^3.1.0",
    "@noble/curves": "^2.0.1",
    "openapi-fetch": "^0.17.0",
    "signet.js": "0.3.1-beta.4",
    "viem": "^2.46.3",
    "ws": "^8.19.0"
  }
}
